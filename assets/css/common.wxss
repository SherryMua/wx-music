@keyframes anloading {
  0% {
    transform: translateY(0rpx);
  }

  50% {
    transform: translateY(20rpx);
  }

  100% {
    transform: translateY(0rpx);
  }
}

.mu-loading {
  padding: 50rpx 0;
  text-align: center;
  color: #888;
  font-size: 26rpx;
}

.loading-animation {
   display: inline-block;
  vertical-align: baseline; 
  height: 30rpx;
  overflow: hidden;
   margin-right: 10rpx; 
}

.loading-animation > text {
  width: 5rpx;
  height: 30rpx;
  background-color: #d43c33;
  position: relative;
  display: inline-block;
  margin-right: 6rpx;
  border-radius: 3rpx;
  animation: anloading 0.9s linear infinite;
  transform-origin: center bottom;
}

 .loading-animation .an-2 {
  animation-delay: -.6s;
}

.loading-animation .an-3 {
  animation-delay: -.3s;
} 

.loading-animation .an-4 {
  animation-delay: -.4s;
} 

.mu-loading-lg .loading-animation {
  display: block
}

.mu-loading-lg .mu-loading-txt {
  display: block;
  margin-top: 16rpx;
}


.mu-grid-panel-hd {
  padding: 15rpx 10rpx;
  font-size: 30rpx;
}

.mu-grid-panel-arrow {
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
  width: 16rpx;
  margin-left: 10rpx;
}

.mu-grids {
  width: 100%;
  padding: 0 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.mu-grid {
  width: 33%;
  padding: 0 5rpx;
  margin-bottom: 15rpx;
}

.media-box-hd {
  position: relative;
  padding-bottom: 100%;
}

.media-box-thumb {
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 4rpx;
}

.media-box-desc {
  display: block;
  position: absolute;
  left: 10rpx;
  bottom: 3rpx;
  z-index: 3;
  font-size: 20rpx;
  font-weight: 300;
  color: #fff;
}

.media-box-hd::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 2;
  width: 100%;
  height: 40rpx;
  background-image: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.2), transparent);
  background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.2), transparent);
}

.media-box-title {
  display: block;
  padding: 8rpx 5rpx;
  font-size: 24rpx;
  line-height: 28rpx;
}

