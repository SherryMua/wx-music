/* pages/song/index.wxss */

.song-bg {
  background-position: 50%;
  background-repeat: no-repeat;
  background-size: auto 100%;
  -webkit-transform: scale(1.5);
  transform: scale(1.5);
  -webkit-transform-origin: center top;
  transform-origin: center top;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  height: 100%;
  overflow: hidden;
  z-index: -1;
  -webkit-transition: opacity 0.3s linear;
  transition: opacity 0.3s linear;
}

.song-bg::after {
  position: absolute;
  left: 0;
  right: 0;
  content: " ";
  bottom: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.player-pointer {
  position: absolute;
  top: 0;
  z-index: 4;
  width: 100%;
  text-align: center;
}

.player {
  margin-top: 170rpx;
}

.player-pointer image {
  width: 222rpx;
  height: 366rpx;
  margin: -60rpx 0 0 111rpx;
  transform-origin: 60rpx 60rpx;
  transform: rotate(-25deg);
  transition: all linear 0.5s;
}
.player-pointer .playing {
  transform: rotate(0);
}

.player-disc {
  position: relative;
  width: 588rpx;
  height: 588rpx;
  margin: auto;
  animation: circling 20s infinite linear;
   animation-play-state: paused;  
}

.running {
  animation-play-state: running;
}

.paused {
  animation-play-state: paused;
}

.song-disc {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 2;
}

.song-cover {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
  width: 368rpx;
  height: 368rpx;
}

.song-light {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 3;
  /* transform: translateY(-50%) */
}

.circling {
  /* transform-origin: center, center; */
   animation: circling 20s infinite linear; 
}

.circling.running {
  animation-play-state: running;
}

.circling.paused {
  animation-play-state: paused;
}

@keyframes circling {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(1turn);
  }
}

.operation {
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 5;
  width: 100%
}


.song-actions {
  display: flex;
  align-items: center;
  margin: 0 80rpx;
}

.song-actions .action-item {
  position: relative;
  flex: 1;
  text-align: center;
}

.song-actions .action-item  image {
  width: 80rpx;
  height: 80rpx;
}

.song-actions .action-item text {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: 10rpx;
  margin-top: -35rpx;
  font-size: 22rpx;
  color: #fff;
}

.song-progress {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.song-progress .cur-time, .song-progress .total-time {
  font-size: 20rpx;
  font-weight: 300;
}

.song-progress .cur-time {
  color: #fff;
}

.song-progress .total-time {
  color: rgba(255, 255, 255, 0.8);
}

.play-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 30rpx;
}

.pl-action-panel {
  display: flex;
  align-items: center;
}

.pl-action-panel .iconfont {
  color: #999;
}

.pl-item {
  margin-left: 15rpx;
  padding: 8rpx 20rpx 10rpx 0;
  border-top: 2rpx solid #eee;
}

.songname {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 1);
}

.singer {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.7);
}
