/* pages/songList/index.wxss */
@import '../../components/songList/index.wxss';

.songlist-header {
  position: relative;
  padding: 60rpx 20rpx 30rpx;
  overflow: hidden;
}

.slhead-bg, .slhead-bg::after {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.slhead-bg::after {
  content: '';
  background-color: rgba(0, 0, 0, 0.25);
}

.slhead-bg {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50%;
  -webkit-filter: blur(20px);
  filter: blur(20px);
  -webkit-transform: scale(1.5);
  transform: scale(1.5);
}

.slhead-wrap {
  display: flex;
  position: relative;
  z-index: 2;
}

.slhead-img {
  width: 200rpx;
  height: 200rpx;
}

.slhead-img image {
  width: 100%;
  vertical-align: middle;
  border-radius: 6rpx;
}

.slhead-txt {
  padding-left: 20rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1 1 auto;
  flex: 1 1 auto;
  width: 1%;
}

.slhead-txt .txt-title {
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #fff;
}

.slhead-txt .txt-name {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #fff;
}

.slhead-txt .txt-copywriter {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.slhead-txt .txt-name, .slhead-txt .txt-copywriter {
  display: block;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.song-list-filter {
}

.select-classify {
  display: inline-block;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  border: 2rpx solid #ddd;
  border-radius: 26rpx;
  color: #333;
}

.cat {
  font-size: 28rpx;
  overflow: hidden;
  /* display: flex;
  flex-wrap: wrap */
}

.cat-item {
  float: left;
  width: 25%;
  text-align: center;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  border-top-width: 0;
  border-left-width: 0;
}

.cat-topclass {
  height: 120rpx;
  line-height: 120rpx;
  overflow: hidden;
}

.cat-subclass {
  height: 60rpx;
  line-height: 60rpx;
}

.cat-item .selected {
  height: 60rpx;
  border: 1px solid #d43c33;
}
