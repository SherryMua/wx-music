/* pages/search/index.wxss */
.mu-search-bar {
  position: relative;
  height: 60rpx;
  padding: 0 60rpx;
  margin: 0 20rpx;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 60rpx;
  font-size: 28rpx;
}

.input-placeholder {
  color: rgba(255, 255, 255, 0.5);
  font-weight: 300;
}

.mu-search-bar input {
  height: 100%;
  color: #fff;
}

.ico-search, .ico-clear {
  position: absolute;
}

.ico-search {
  width: 28rpx;
  height: 28rpx;
  top: 16rpx;
  left: 20rpx;
}
.ico-clear  {
  width: 34rpx;
  height: 34rpx;
  top: 13rpx;
  right: 20rpx;
}

.sr-hotlist .title {
  font-size: 24rpx;
  line-height: 24rpx;
  margin-left: 20rpx;
  color: #666;
}

.sr-hotlist .hot-list {
  display: flex;
  flex-wrap: wrap;
}

.sr-hotlist .hot-item {
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 0 20rpx 20rpx;
  padding: 0 28rpx;
  font-size: 26rpx;
  border: 2rpx solid #d3d4da;
  border-radius: 60rpx;
  color: #333;
}

.sr-history .h-item {
  display: flex;
  align-items: center;
  height: 90rpx;
  margin-left: 20rpx;
  padding-right: 25rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid #eee;
}

.sr-history .h-item text {
  flex: 1;
  padding-left: 25rpx;
}

.sr-recom > text {
  display: flex;
  width: 100%;
  height: 80rpx;
  margin: 0 20rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #507daf;
  border-bottom: 2rpx solid #eee;
}

.sr-recom .re-item {
  display: flex;
  align-items: center;
  height: 90rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.sr-recom .re-item text {
  width: 100%;
  line-height: 90rpx;
  margin-left: 25rpx;
  padding-right: 25rpx;
  border-bottom: 2rpx solid #eee;
}

/* 搜索结果 */

.highlight {
  color: #507daf;
}

.sr-search-result .res-item {
  padding-left: 20rpx;
}

.flex-align-center, .res-item, .res-item-bd {
  display: flex;
  align-items: center;
  align-content: center;
}

.res-item {
  padding-left: 20rpx;
}

.res-item-bd {
  flex: 1;
}

.res-item .line {
  border-bottom: 2rpx solid #eee;
}

.item-info {
  flex: 1;
  justify-content: space-between;
  width: 0;
  padding: 10rpx 0;
}

.item-info-large {
  height: 108rpx;
  box-sizing: initial;
}

.item-title {
  font-size: 30rpx;
  line-height: 36rpx;
}

.item-tail {
  display: inline-block;
  color: #888;
}

.item-desc {
  font-size: 24rpx;
  color: #888;
}

.item-actions {
  padding: 0 20rpx;
}

/* 歌手 start*/

.art-enter {
  font-size: 24rpx;
  font-weight: 300;
  color: #888;
}

.art-enter image {
  display: inline-block;
  vertical-align: middle;
  margin-top: -7rpx;
  width: 30rpx;
  height: 30rpx;
}

/* 歌手 end*/

/* 专辑 */

.album-cover {
  width: 128rpx;
}

.album-cover .pic-cover {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}

.album-cover-bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 128rpx;
  height: 108rpx;
}

/* 专辑 end*/

.res-cover {
  position: relative;
  height: 108rpx;
  margin: 10rpx 20rpx 10rpx 0;
}

.pic-108 {
  width: 108rpx;
  height: 108rpx;
  border-radius: 8rpx;
}

.usr-gender {
  display: inline-block;
  margin-left: 10rpx;
}

.usr-gender image {
  width: 24rpx;
  height: 24rpx;
}

.mv-cover, .mv-cover image {
  width: 198rpx;
}

.sgmv, .sgmv image, .sgmore, .sgmore image {
  width: 56rpx;
  height: 56rpx;
}

.flex-1 {
  flex: 1;
}
.sr-res-notfound {
  padding: 60rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #888;
}
