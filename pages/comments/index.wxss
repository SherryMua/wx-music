/* pages/comments/index.wxss */

.sl-detail {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}
.sl-detail .sl-img {
  width: 180rpx;
  height: 180rpx;
}

.sl-detail .sl-txt {
  margin-left: 30rpx;
  flex: 1;
  width: 0
}
.txt-title {
  font-size: 32rpx;
  color: #333;
}
.title-tag {
  display: inline-block;
  vertical-align: top;
  margin: 6rpx 10rpx 0 0;
  padding: 4rpx 6rpx 2rpx;
  font-size: 22rpx;
  line-height: 22rpx;
  color: rgba(217,48,48,.8);
  border: 2rpx solid rgba(217,48,48,.8)
}
.txt-auth {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #888 
}
.txt-auth > text {
  color: #507daf
}

.comments .cmt-title {
  padding: 8rpx 20rpx;
  color: #666;
  font-size: 24rpx;
  font-weight: 400;
  background: #eee;
}

.cmt-item {
  display: flex;
  margin-top: 20rpx;
}

.cmt-item .cmt-head {
  margin: 0 20rpx;
}

.cmt-item .cmt-head image {
  display: block;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
}

.cmt-wrap {
  width: 0;
  flex: auto;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.cmt-info {
  display: flex;
}

.cmt-meta {
  width: 0;
  flex: auto;
  font-size: 0;
}

.cmt-user {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.cmt-time {
  font-size: 20rpx;
  color: #999;
}

.cmt-like {
  font-size: 22rpx;
  color: #999;
}

.cmt-content {
  margin-top: 10rpx;
  font-size: 30rpx;
  line-height: 46rpx;
  color: #333;
}

.cmt-replied {
  margin: 10rpx 0;
  padding: 20rpx;
  color: #888;
  font-size: 28rpx;
  line-height: 42rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}
.cmt-replied-user {
  display: inline-block;
}
.cmt-replied-user navigator {
  color: #507daf;
}
