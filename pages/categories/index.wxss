/* pages/categories/index.wxss */

.mu-categories-panel {
  margin-bottom: 20rpx;
}
.mu-categories-hd {
  padding: 20rpx 0;
  text-align: center;
  font-size: 32rpx;
}

.mu-categories {
  border-top: 2rpx solid #eee;
}

.mu-categories, .mu-categorise, .mu-categorise-box {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.mu-categorise {
  width: 50%;
  border-bottom: 2rpx solid #eee;
}

.mu-categorise-box {
  width: 100%;
  margin: 20rpx 0;
  padding-left: 100rpx;
  border-right: 2rpx solid #eee;
}

.mu-categorise-thumb {
  width: 56rpx;
  margin-right: 20rpx;
}

.mu-categorise-title {
  font-size: 28rpx;
}
